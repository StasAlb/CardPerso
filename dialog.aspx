<!-- Вывод на страницу общих диалоговых окон -->

<!-- Для окна вывода ошибки -->
<div id="popup_error" title="Ошибка"  class="ui-widget" style="display:none">
		<p>
			<div class="ui-state-error-text">	
    	  		<span class="ui-icon ui-icon-alert ui-state-error-text" style="float:left; margin:0 7px 20px 0;"></span>
    		</div>  
      	 	<center id="popup_error_text"></center>
    	</p>
    	
</div>

<!-- Для окна вывода сообщения -->
<div id="popup_msg" title=""  class="ui-widget" style="display:none">
		<p>
    	  <span class="ui-icon ui-icon-info" style="float:left; margin:0 7px  20px 0;"></span>
      	  <center id="popup_msg_text"></center>
    	</p>
</div>

<!-- Для окна ожидания -->
<div id="popup_wait" class="ui-widget" title=""  style="display:none">
	<table cellpadding="5px" cellspacing="5px" width="100%">
		<tr>	
			<td align="center">
				<label id="popup_wait_text" style="font-family:Arial,Tahoma,sans-serif;font-weight:normal"></label>
			</td>
		</tr>
	</table>			
</div>

<!-- Для окна вывода вопроса Да/Нет -->
<div id="popup_question" title=""  class="ui-widget" style="display:none">
		<p>
    	  <span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;"></span>
      	  <center id="popup_question_text"></center>
    	</p>
</div>

